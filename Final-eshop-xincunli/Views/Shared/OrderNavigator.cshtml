<ul id="orderNavigator">
    <li @if (getController() == "Cart")
        {
            @:class="selected"
        }>
        1. Cart
    </li>
    <li @if (getAction() == "CheckOut")
        {
            @:class="selected"
        }>
        2. Filling Order
    </li>
    <li @if (getAction() == "Confirm")
        {
            @:class="selected"
        }>
        3. Confirm Order
    </li>
    <li @if (getAction() == "Finish")
        {
            @:class="selected"
        }>
        4. Place Order
    </li>
</ul>

@functions{
    public string getController(){
       return Request.RequestContext.RouteData.Values["controller"].ToString();
   }
   public string getAction(){
       return Request.RequestContext.RouteData.Values["action"].ToString();
   }
}
