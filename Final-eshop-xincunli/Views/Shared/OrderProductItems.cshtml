
@model List<Final_eshop_xincunli.Models.IProduct>

<div class="errorMessageContent"></div>
@if(Model.Count>0){
<table id="cartList">
    <thead>
        <tr>
            <th colspan="2">
                @Html.DisplayNameFor(model => model[0].product)
            </th>

            <th>
                @Html.DisplayNameFor(model => model[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @{ double total = 0;}
        @for (int i = 0; i < Model.Count(); i++)
        {
            total += Model[i].Price;
            <tr class="cartList-item">
                @Html.HiddenFor(model => Model[i].Id)
                <td class="cart-item-cover">
                    @Html.LabelFor(model => Model[i].product.ProductId)
                </td>
                <td class="cart-item-title">
                   @Html.LabelFor(model => Model[i].product)
                </td>
                <td class="cart-item-amount">
                    @Html.DisplayFor(model => Model[i].Amount)
                </td>
                <td class="cart-item-price">
                    <span class="price">@Html.DisplayFor(model => Model[i].Price)</span>
                </td>
            </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">
                <span class="cartTotal">Order Total: $@total</span>
            </td>
        </tr>
    </tfoot>
</table>
}else{
    <p class="notContent">
        No Products
    </p>
}



