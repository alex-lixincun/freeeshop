@using Final_eshop_entities.Models;
@model List<Product>
<style>
    .ProductImg {
        height: 75px;
    }
</style>
<h2>@ViewBag.Title</h2>
<h4>Once basis buyer consumes more than $1000.00, they will be upgrade to Premium member.</h4>
<h4>The Premium member can buy special price goods and enjoy free shipping.</h4>
<hr />
@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img class="ProductImg" src="~/Content/Uploads/@Html.DisplayFor(modelItem => product.ImagePath)" alt=@Html.DisplayFor(modelItem => product.ProductName)>
                    <div class="caption">
                        <h3>@Html.LabelFor(modelItem => product.ProductName) : @Html.DisplayFor(modelItem => product.ProductName)</h3>
                        <p>@Html.LabelFor(modelItem => product.Category) : @Html.DisplayFor(modelItem => product.Category)</p>
                        <p>@Html.LabelFor(modelItem => product.ProductPrice) : @Html.DisplayFor(modelItem => product.ProductPrice)</p>
                        <p>@Html.LabelFor(modelItem => product.Discount) : @Html.DisplayFor(modelItem => product.Discount)%</p>
                        <p>@Html.LabelFor(modelItem => product.Shipping) : @Html.DisplayFor(modelItem => product.Shipping)</p>
                        <div class="display-field">
                            @if (product.ProductCount > 0)
                            {
                                using (Html.BeginForm("AddToCart", "Cart", new { id = product.ProductId }, FormMethod.Post))
                                {
                                    <button id="cart-add-button" class="btn btn-primary" type="submit">Add to cart</button>
                                }
                            }
                            else
                            {
                                <span class="warning">SOLD OUT.</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="notContent">There are not any products in our store.</p>
}